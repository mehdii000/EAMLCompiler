@title "Product Dashboard"

# Global reusable UI blocks
@save productCard:
    @h2 "{title}"
    @text "{description}"
    @button "View Details"
    @button "Add to Cart"

@save header:
    @h1 "Inventory Manager"
    @text "Manage your products and view details."

@save footer:
    @text "2025 MyCompany â€” All rights reserved."


# A list of products
@save products:
    @button "Laptops"
    @button "Smartphones"
    @button "Accessories"


# Main screen of the app
@screen home:
    @load header
    
    @h2 "Categories"
    @load products
    @h2 "Featured Product"
    
    @load productCard with:
        title: "UltraBook Pro 14"
        description: "Lightweight, powerful, and perfect for development."
    
    @load footer
