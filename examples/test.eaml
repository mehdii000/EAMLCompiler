@title "Test Page"

@define variable age as 32

@define component greeting_card [bordered]:
    @text "Hello There {name} i am {age} old"
    @row [gap: 10px]:
        @text "Click for a suprise -> "
        @button "Click"

@define screen main_screen [center_items]:
    @use greeting_card with:
        name as "Mehdi"
    @row:
        @button "Click 1"
        @button "Click 2"
        @button "Click 3"

@define screen test_screen [hidden]:
    @text "This is just a test"
